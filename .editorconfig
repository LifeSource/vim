; .editorconfig
{
    "js": { "indent_char": " ", "path": "~/.vim/bundle/jsbeautify/plugin/beautify.js", "space-in-paren": "true", "indent_style": "space", "indent_size": "4", "bin": "node" },
    "json": {}
}

root = true

[**.js]
