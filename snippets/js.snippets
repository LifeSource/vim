# ---------------------------------------------
# JavaScript ES5
# ---------------------------------------------

# Object, Constants and Variable  Creation
snippet varr
	var ${1} = [${2}];

snippet vobj
	var ${1} = {
		${0}
	};

snippet vlet
	let ${1} = ${0};

snippet vconst
	const ${1} = ${0};

# Conditional
snippet ief
	if (${1}) {
		${2}
	} else if (${3}) {
		${4}
	} else {
		${0}
	}

# Functions, IIFE
snippet	f;
	function (${1}) {


	});

snippet fn
	function () {
		${0}
	}

snippet iife
	(function () {
		"use strict";
		${0}
	})();

# ---------------------------------------------
# JavaScript ES6
# ---------------------------------------------

# Class
snippet cls
	class ${1} {

		constructor() {

		}
	}

# Arrow Function
snippet ->
	(${1}) => ${0}
